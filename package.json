{
  "name": "perspective-preview",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "lint:staged": "lint-staged",
    "test": "vitest",
    "test:e2e": "npx playwright test",
    "test:e2e:ui": "npx playwright test --ui",
    "test:e2e:report": "npx playwright show-report",
    "ts:check": "./node_modules/.bin/tsc -p . --noEmit",
    "ts:watch": "./node_modules/.bin/tsc -p . --noEmit --watch",
    "prettier": "./node_modules/.bin/prettier --write 'src/**/*.{ts,tsx}'",
    "prettier:staged": "pretty-quick --staged",
    "check:style": "npm run prettier:staged && npm run lint:staged",
    "check:health": "npm run check:style && npm run ts:check && npm run test && npm run test:e2e"
  },
  "dependencies": {
    "next": "14.2.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.44.1",
    "@testing-library/react": "^16.0.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^7.12.0",
    "@vitejs/plugin-react": "^4.3.0",
    "eslint": "^8",
    "eslint-config-next": "14.2.3",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "jsdom": "^24.1.0",
    "lint-staged": "^15.2.5",
    "postcss": "^8",
    "prettier": "^3.3.1",
    "pretty-quick": "^4.0.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "vitest": "^1.6.0"
  }
}
